generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model User{
  uid Int @id @default(autoincrement())
  password String @unique
  emailPrimary String @unique
  emailSecondary String
  profesorFlag Int 
  verifiedEmail Int
}

model Posts{
  id Int @id @default(autoincrement())
  author_id Int
  title String?
  description String?
  votes Int?
  created_at DateTime? @default(now())
  category String?
  comments_count Int?
  url String?
}

model Comments{
  id Int @id @default(autoincrement())
  post_id Int
  parent_id Int
  author_id Int
  description String?
  votes Int?
  created_at DateTime? @default(now())
}

model PostsFollow{
  user_id Int
  post_id Int
  @@unique([user_id, post_id])
}

model Admin {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  level   Int      @default(1)
}

model Teachers {
  email           String      @id
  materie         String
  materieSecundara String?
}

model Report {
  report_id    Int     @id @default(autoincrement())
  reporter_email  String  @db.VarChar(50)
  reported_email  String  @db.VarChar(50)
  reason       String  @db.VarChar(255)
  state String @db.VarChar(50)
}
