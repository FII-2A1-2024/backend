generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model User{
  uid Int @id @default(autoincrement())
  password String @unique
  emailPrimary String @unique
  emailSecondary String
  profesorFlag Int 
  verifiedEmail Int
}

model LoggedUsers {
  luid     Int    @id @default(autoincrement())
  uid      Int    
  username String
  socket     String
}


model Posts{
  id Int @id @default(autoincrement())
  username String?
  author_id Int
  title String?
  description String?
  votes Int?
  created_at DateTime? @default(now())
  category String?
  comments_count Int?
  url String?
}

model Comments{
  id Int @id @default(autoincrement())
  post_id Int
  username String?
  parent_id Int
  author_id Int
  description String?
  votes Int?
  created_at DateTime? @default(now())
}

model PostsFollow{
  user_id Int
  post_id Int
  @@unique([user_id, post_id])
}

model Admin {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  level   Int      @default(1)
}
model Teachers {
  email           String      @id
  materie         String
  materieSecundara String?
}

model Email_profesori{
email String @unique
}

model PostReports {
  report_id          Int     @id @default(autoincrement())
  post_id            Int
  reason             String
  id_reporter Int?
  id_post_owner  Int?
  stateOfReport      String  @default("verification in pending")
}

model CommentReports {
  report_id          Int     @id @default(autoincrement())
  comment_id            Int
  reason             String
  id_reporter Int?
  id_comment_owner  Int?
  stateOfReport      String  @default("verification in pending")
}
